	-- Files.
	local resolveBaseOuputPath :: (project:Project) -> (success:bool, dir:string) {
		local dir = project.exportBaseDirectory ?: "."

		if not isPathAbsolute(dir) {
			if not project.path  return false, ""
			dir = splitDirectoryAndFilename(project.path).."/"..dir
		}

		return true, (normalizeDirectoryPath(dir))
	}
	local resolveParticlesOuputPath :: (project:Project) -> (success:bool, path:string) {
		local dir, filename = splitDirectoryAndFilename(project.exportParticlesPath, keepSlash=true)
		if not dir  dir = "."

		if not isPathAbsolute(dir)  dir = (project.exportBaseDirectory ?: ".").."/"..dir

		if not isPathAbsolute(dir) {
			if not project.path  return false, ""
			dir = splitDirectoryAndFilename(project.path).."/"..dir
		}

		if not filename {
			_, filename = splitDirectoryAndFilename(project.path)
			filename    = replacePatternWithPattern(filename, "(.)%.[^.]+", "%1") ?: "untitled"
			filename    = filename..".lua"
		}

		return true, (normalizeFilePath(dir.."/"..filename))
	}
	local resolveTextureOuputPath :: (project:Project, system:System) -> (success:bool, path:string) {
		local path = system.texturePath ?: system.textureName..".png"

		if not isPathAbsolute(path)  path = (project.exportTexturesDirectory ?: ".").."/"..path
		if not isPathAbsolute(path)  path = (project.exportBaseDirectory     ?: ".").."/"..path

		if not isPathAbsolute(path) {
			if not project.path  return false, ""
			path = splitDirectoryAndFilename(project.path).."/"..path
		}

		return true, normalizeFilePath(path)
	}

